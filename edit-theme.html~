<dom-module id="edit-theme">
  <template>
    <style>
    .fields{
      margin-left:auto;
      margin-right:auto;
      max-width:80%;
      padding-bottom:20px;
    }
    .paper-card-panel{
      background-color:white;
      width:80%;
      display:block;
      margin: 3% auto;
    }
    .card-wrapper{
      width:100%;
      margin-bottom:3%;
    }
    paper-button.custom:hover {
      background-color: var(--paper-green-400);
    }
    paper-button.green {
      background-color: var(--paper-green-500);
    color: white;
    }
    paper-button.green[active] {
      background-color: var(--paper-green-200);
    }
    paper-button.green{
      margin-left:10%;
    }
     #toggle-text{
      font-size: 16px;
      font-weight: 400;
      color:grey;
    }
   paper-dropdown-menu {
      width: 300px;
    }
    paper-dropdown-menu::shadow paper-input{
      width: 300px;
    }
    paper-dropdown-menu::shadow paper-item{
       width: 300px;
    }



    </style>

    <iron-ajax
       auto
       id="dropdownedit"
       url="http://fahad.quiddiportal.com/polymer_form_api/get-themes"
       handle-as="json"
       on-response="handleResponse"></iron-ajax>

    <iron-ajax
       id="getpayload"
       url="http://fahad.quiddiportal.com/polymer_form_api/edit-theme"
       body='{{structure}}'
       method="POST"
       headers='{"Content-Type": "application/json"}'
       handle-as="json"
       on-response="handleFormResponse"
       debounce-duration="300"></iron-ajax>



    <div class="card-wrapper"><!--WEBSITE-->
      <paper-card heading="Website" class="paper-card-panel" id="cardz" elevation="2">

	<!-- <paper-card heading="Website"> -->
        <div class="fields">
          <paper-dropdown-menu label="Themes" on-iron-select="_itemSelected" id="exp">
            <paper-listbox class="dropdown-content" >
              <template is="dom-repeat" items="{{themes}}">
                <paper-item>{{item.website.name}}</paper-item>
              </template>
            </paper-listbox>
          </paper-dropdown-menu>
        </div>
      </paper-card>
    </div>

    <div class="page">
      <!-- <div class="page"> -->
      <form is="iron-form" id="form" method="post" action="http://fahad.quiddiportal.com/polymer_form_api/edit-theme" content-type="application/json">

        <div class="card-wrapper"><!--WEBSITE-->
          <paper-card heading="Website" class="paper-card-panel" id="cardz" elevation="0">
            <div class="fields">
              <paper-input name="websiteName" label="Website Name" error-message="needs some text!" 
			   value={{structure.website.name}} autofocus required auto-validate disabled></paper-input>
              <paper-input name="logo" label="Logo url" value={{structure.website.logo}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input name="logo_alt" label="Logo Alt Text" value={{structure.website.logo_alt}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input name="email" label="Email Address" value={{structure.website.email}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input name="apr" label="Representative APR" value={{structure.website.apr}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
            </div>
          </paper-card>
        </div>

        <div class="card-wrapper"><!--COMPANY-->
          <paper-card heading="Company" class="paper-card-panel" elevation="2">
            <div class="fields">

              <paper-input name="company-name" label="Company name" 
			   style="left-margin:20px;" value={{structure.company.name}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
              <paper-input name="company-reg" label="Company reg number" 
			   value={{structure.company.reg}} 
			   error-message="needs some text!"autofocus required auto-validate></paper-input>
              <paper-input name="company-address" label="Company address" 
			   value={{structure.company.address}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
              <paper-input name="ico-reg" label="Company ICO number" 
			   value={{structure.company.ico_reg}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
              <paper-input name="fsa-ref" label="Company FSA referece number" value={{structure.company.fsa.ref}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
              <br/>
	      <div>
		<span id="toggle-text">Company Full FSA Permission (No/Yes)</span>
		<paper-toggle-button active={{structure.company.fsa.full_permission}} 
				     checked={{structure.company.fsa.full_permission}} 
				     style="display:inline; margin-left:10%;" on-change="_toggleHoldingCompany"></paper-toggle-button>
              </div>
	    </div>
          </paper-card>
        </div>

        <div class="card-wrapper" hidden$={{!structure.company.fsa.full_permission}}><!--HOLDING COMPANY-->
          <paper-card heading="Holding Company" class="paper-card-panel" elevation="2">
            <div class="fields">
              <paper-input name="holding-company-name" label="Name" value={{structure.holding_company.name}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
              <paper-input name="holding-company-fsa-ref" label="Fsa Reference" value={{structure.holding_company.fsa.ref}} 
			   error-message="needs some text!" autofocus required auto-validate></paper-input>
            </div>
          </paper-card>
        </div>

        <div class="card-wrapper"><!--PAGE COLORS-->
          <paper-card heading="Page Colors" class="paper-card-panel" elevation="2">
            <div class="fields">
              <paper-input label="Text" value={{structure.color.body_text}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input label="First color" value={{structure.color.first}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input label="Second color" value={{structure.color.second}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
            </div>
          </paper-card>
        </div>

        <div class="card-wrapper"><!--BUTTON COLORS-->
          <paper-card heading="Button Colors" class="paper-card-panel" elevation="2">
            <div class="fields">
              <paper-input label="Button-still" value={{structure.button.still}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
              <paper-input label="Button-hover" value={{structure.button.hover}} error-message="needs some text!" 
			   autofocus required auto-validate></paper-input>
            </div>
          </paper-card>
        </div>

        <div class="card-wrapper">
          <paper-button class="green"  raised on-click="formSubmit">Submit</paper-button>

        </div>
      </form>
    </div>


    <paper-toast text="{{message}}" id="toast3"></paper-toast>

  </template>

  <script>
    Polymer({
    is: "edit-theme",
    properties:{
      message: {
        type:String
      }
    },
     <!-----------------itemSelected()----------DROPDOWN MENU------------>
    _itemSelected : function(e) {
      this.$.dropdownedit.generateRequest();
      selectedItem = e.target.selectedItem;
      if (selectedItem) {
        console.log("Selected from the Dropdown : " + selectedItem.innerText);
        this.selectedSite = selectedItem.innerText;
      }
      for (var i=0; i<this.themes.length; i++){

        console.log(this.selectedSite + "---->"  + this.themes[i].website.name)
        if (this.selectedSite == this.themes[i].website.name){
          console.log("Selected theme exists in the Database, Ok to clone!")
	  				  
          this.structure = this.themes[i]
          }
      }
    },
    <!-----------------handleResponse()----------HANDLES RESPONSE OF FIRST AJAX(id=dropdownedit)------------>
    handleResponse:  function(e){
      var themes = e.detail.response;
      this.themes = themes
      var themeNames = []
      for (var i=0; i<this.themes.length; i++){
        themeNames.push(this.themes[i].website.name)
      }
      this.themeNames = themeNames
      console.log(this.themeNames.length +  " Themes Returned after Dropdown Ajax call: " + this.themeNames)
      var clone = document.querySelector('clone-theme');
      clone.$.dropdownclone.generateRequest();
    },
    <!-----------------formSubmit()---------------------->
    formSubmit: function(e){
      if (this._validateForm()){
        this.$.getpayload.generateRequest();
        console.log("trying to submit form");
      }else{
        this.message = "Some fields are missing"
        document.querySelector('#toast3').open()
        console.log("Could not validate form");
      }
      this.$.dropdownedit.generateRequest();
      },
    <!-----------------handleFormResponse()----------HANDLES RESPONSE FROM SECOND AJAX(id=getpayload)------------>
      handleFormResponse: function(e){
        console.log(e.detail.response.status)
        this.message = e.detail.response.status
        document.querySelector('#toast3').open()
      },
    <!-----------------validateFrom()---------------------->
      _validateForm: function() {
        var form = this.$.form;
        var firstInvalid = false;
        for (var el, i = 0; el = form.elements[i], i < form.elements.length; i++) {
          if (el.checkValidity()) {
            el.removeAttribute('aria-invalid');
          } else {
            if (!firstInvalid) {

              if (el.nextElementSibling) {
                this.fire('announce', el.nextElementSibling.getAttribute('error-message'));
              }
              if (el.scrollIntoViewIfNeeded) {

                el.scrollIntoViewIfNeeded();
              } else {
                el.scrollIntoView(false);
              }
              el.focus();
              firstInvalid = true;
            }
            el.setAttribute('aria-invalid', 'true');
          }
        }
        return !firstInvalid;
      },
      <!-----------------toggleHoldingCompany()---------------------->						       
      _toggleHoldingCompany:function(e){
        this.structure.company.fsa.full_permission = e.target.checked;    						       
      }

    });

  </script>
</dom-module>
